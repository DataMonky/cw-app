{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@cw-app/api": ["libs/api/src/index.ts"],
      "@cw-app/contacts": ["libs/contacts/src/index.ts"],
      "@cw-app/mocked-data": ["libs/mocked-data/src/index.ts"],
      "@cw-app/shared-ui": ["libs/shared-ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
